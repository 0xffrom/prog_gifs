<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Light application theme -->
    <style name="Theme.Fintech2021" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryLightColor</item>
        <!-- Secondary colors -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryDarkColor</item>
        <!-- Text colors -->
        <item name="android:textColorSecondary">@color/secondaryTextColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- No ActionBar Theme -->
    <style name="Theme.Fintech2021.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- TabLayout Theme -->
    <style name="Theme.Fintech2021.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/secondaryColor</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabSelectedTextColor">@color/secondaryColor</item>
    </style>

    <!-- FloatingButton Theme -->
    <style name="Theme.Fintech2021.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/iconColor</item>
        <item name="fabCustomSize">48dp</item>
        <item name="maxImageSize">36dp</item>
    </style>

</resources>